		      </m:apply> 
		      <m:apply>
			<m:lt/>
			<m:apply>
			  <m:sin/>
			  <m:apply>
			    <m:times/>
			    <m:cn>2</m:cn>
			    <m:pi/>
			    <m:ci>
			      <m:msub>
